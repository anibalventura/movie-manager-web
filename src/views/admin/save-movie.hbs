<div class="row justify-content-center mb-4">
  <div class="col-5">
    <div class="card shadow-sm">
      <div class="card-header {{#if editMode}}bg-warning{{else}}bg-success{{/if}} text-light">
        <h4>{{#if editMode}}Edit Movie{{else}}Add a Movie{{/if}}</h4>
      </div>
      <div class="card-body">
        <form method="post" action="{{#if editMode}}/admin/edit-movie{{else}}/admin/add-movie{{/if}}">

          {{#if editMode}}

          <input type="hidden" name="Id" value="{{movie.id}}">

          {{/if}}

          <div class="form-group row mb-3">
            <div class="col">
              <label for="title" class="form-label"><strong
                >Title:</strong></label>
              <input
                required
                type="text"
                id="title"
                name="Title"
                placeholder="Enter a title..."
                class="form-control shadow-sm"
                value="{{#if editMode}}{{movie.title}}{{/if}}"
              />
            </div>
          </div>

          <div class="form-group row mb-3">
            <div class="col">
              <label for="description" class="form-label"><strong
                >Description:</strong></label>
              <textarea
                required
                id="description"
                name="Description"
                placeholder="Enter a description..."
                class="form-control shadow-sm"
                rows="5"
              >{{#if editMode}}{{movie.description}}{{/if}}</textarea>
            </div>
          </div>

          <div class="form-group row mb-3">
            <div class="col">
              <label for="imageUrl" class="form-label"><strong>Image URL:</strong></label>
              <input
                required
                id="imageUrl"
                name="ImageUrl"
                placeholder="https://www.image.com/image.png"
                class="form-control shadow-sm"
                type="url"
                value="{{#if editMode}}{{movie.imageUrl}}{{/if}}"
              />
            </div>
          </div>

          <div class="form-group row mb-3">
            <div class="col-6">
              <label for="genre" class="form-label"><strong
                >Genre:</strong></label>
              <select required id="genre" name="Genre" class="form-select shadow-sm">
                <option value="">Select an option</option>
                {{#each genres}}
                  <option {{isSelected ../movie.genre this.value}} value="{{this.value}}">{{this.label}}</option>
                {{/each}}
              </select>
            </div>
            
            {{#if editMode}}
              <div class="col-6">
                <label for="status" class="form-label"><strong
                  >Status:</strong></label>
                <div class="form-check">
                  <input {{isChecked movie.status}} class="form-check-input" type="checkbox" name="Status" id="status">
                  <label class="form-check-label" for="status">
                    Active
                  </label>
                </div>
              </div>
            {{/if}}
          </div>

          <div class="container-fluid text-center mt-4">
            <button
              type="submit"
              class="btn btn-primary shadow-sm"
            >{{#if editMode}}Update{{else}}Add{{/if}}</button>
            <a href="/admin" class="btn btn-secondary shadow-sm">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>